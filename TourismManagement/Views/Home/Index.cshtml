@model HomeIndexViewModel
@{
    ViewBag.Title = Model.TitleName;
}
    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">Categories</h1>
            <div class="list-group">
                <a href="#tourinside" class="list-group-item">TOUR INSIDE</a>
                <a href="#touroutside" class="list-group-item">TOUR OUTSIDE</a>
                <a href="#toursaling" class="list-group-item">TOUR SALING</a>
                <a asp-controller="Home" asp-action="Book" class="list-group-item">BOOK TOUR</a>
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="../Images/Hanoi2.jpg" style="width:900px;height:325px;" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="../Images/HCM.jpg" style="width:900px;height:325px;" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="../Images/Singapore.jpg" style="width:900px;height:325px;" alt="Third slide">
                    </div>

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="text-center" style="color:#003E60" id="tourinside">
                <h1 style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">TOUR INSIDE</h1>
            </div>
            <hr />
            <div class="row">
                @foreach (var Tour in Model.tours)
                {
                    if (Tour.TypeId == 1002)
                    {
                        var avatarPath = $"/images/{(Tour.TourImage ?? "avatar.png")}";
                        <div class="col-lg-4 col-md-6 mb-4 text-center">
                            <div class="card h-100">
                                <a><img class="card-img-top" src="@avatarPath" alt="image" style="width:253px;height:250px"></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a>@Tour.TourName</a>
                                    </h4>
                                    <h5>Price: @Tour.Price</h5>
                                    <p class="card-text">@Tour.Description</p>
                                </div>

                                <div class="card-footer text-center">
                                    <a asp-controller="Home" asp-action="Book" class="btn btn-warning">Book</a>
                                    <a asp-controller="Home" asp-action="Infor" asp-route-id="@Tour.TourId" class="btn btn-primary">View</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="text-center" style="color:#003E60" id="touroutside">
                <h1 style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">TOUR OUTSIDE</h1>
            </div>
            <hr />
            <div class="row">
                @foreach (var Tour in Model.tours)
                {
                    if (Tour.TypeId == 1003)
                    {
                        var avatarPath = $"/images/{(Tour.TourImage ?? "avatar.png")}";
                        <div class="col-lg-4 col-md-6 mb-4 text-center">
                            <div class="card h-100">
                                <a><img class="card-img-top" src="@avatarPath" alt="image" style="width:253px;height:250px"></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a>@Tour.TourName</a>
                                    </h4>
                                    <h5>Price: @Tour.Price</h5>
                                    <p class="card-text">@Tour.Description</p>
                                </div>
                                <div class="card-footer text-center">
                                    <a asp-controller="Home" asp-action="Book" class="btn btn-warning">Book</a>
                                    <a asp-controller="Home" asp-action="Infor" asp-route-id="@Tour.TourId" class="btn btn-primary">View</a>
                                </div>
                            </div>
                        </div>
                    }

                }
            </div>
            <div class="text-center" style="color:#003E60" id="toursaling">
                <h1 style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">TOUR SALING</h1>
            </div>
            <hr />
            <div class="row">
                @foreach (var Tour in Model.tours)
                {
                    if (Tour.TypeId == 1004)
                    {
                        var avatarPath = $"/images/{(Tour.TourImage ?? "avatar.png")}";
                        <div class="col-lg-4 col-md-6 mb-4 text-center">
                            <div class="card h-100">
                                <a><img class="card-img-top" src="@avatarPath" alt="image" style="width:253px;height:250px"></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a>@Tour.TourName</a>
                                    </h4>
                                    <h5>Price: @Tour.Price</h5>
                                    <p class="card-text">@Tour.Description</p>
                                </div>
                                <div class="card-footer text-center">
                                    <a asp-controller="Home" asp-action="Book" class="btn btn-warning">Book</a>
                                    <a asp-controller="Home" asp-action="Infor" asp-route-id="@Tour.TourId" class="btn btn-primary">View</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->

    </div>
