@model HomeInforViewModel
@{
    ViewBag.Title = Model.TitleName;
    var avatarPath = $"/images/{(Model.tour.TourImage ?? "avatar.png")}";
}
    <div class="text-center" style="color:#003E60">
        <h1>@ViewBag.Title</h1>
    </div>
<div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card my-2">
                <div class="card-header text-center">
                    <h3>@Model.tour.TourName</h3>
                </div>
                <div class="card-body text-center">
                    <img src=@avatarPath style="width:350px;height:250px" asp-append-version="true" />
                    <h3>Description: @Model.tour.Description</h3>
                    <h3>Price: @Model.tour.Price</h3>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary ">Back</a>
                    <a asp-controller="Home" asp-action="Book" class="btn btn-warning">Book</a>
                </div>
            </div>
        </div>
    </div>
